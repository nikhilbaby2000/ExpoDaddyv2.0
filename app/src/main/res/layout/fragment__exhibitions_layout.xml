<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.nikhil.expodaddyv20.Fragments.Fragment_Exhibitions"
    android:id="@+id/framelayout_exhibitions">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="#9529aada"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exhibitions"
            style="@android:style/Animation"
            android:gravity="center_horizontal"
            android:textSize="15dp"
            android:textColor="#ff040405" />

     </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView_exhibitions"
        android:layout_gravity="center"
        android:layout_above="@+id/exhibitions_footer"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="3dp" />



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/exhibitions_footer"
        android:layout_alignParentBottom="true"></FrameLayout>

    </RelativeLayout>

</FrameLayout>
