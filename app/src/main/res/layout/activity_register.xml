<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   >


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name_value"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="20dp"
        android:hint="Name"
        android:layout_marginRight="35dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_value"
        android:layout_below="@+id/name_value"
        android:layout_alignLeft="@+id/name_value"
        android:layout_alignStart="@+id/name_value"
        android:hint="E-mail"
        android:layout_marginRight="35dp"
        android:layout_marginTop="7dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_value"
        android:layout_below="@+id/email_value"
        android:layout_alignLeft="@+id/email_value"
        android:layout_alignStart="@+id/email_value"
        android:layout_alignRight="@+id/email_value"
        android:layout_alignEnd="@+id/email_value"
        android:hint="Password"
        android:layout_marginTop="7dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_confirm_value"
        android:layout_below="@+id/password_value"
        android:layout_alignLeft="@+id/password_value"
        android:layout_alignStart="@+id/password_value"
        android:layout_alignRight="@+id/password_value"
        android:layout_alignEnd="@+id/password_value"
        android:hint="Confirm Password"
        android:layout_marginTop="7dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/age_value"
        android:layout_below="@+id/password_confirm_value"
        android:layout_alignLeft="@+id/password_confirm_value"
        android:layout_alignStart="@+id/password_confirm_value"
        android:layout_marginTop="50dp"
        android:hint="Age" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phone_value"
        android:layout_below="@+id/age_value"
        android:layout_alignLeft="@+id/age_value"
        android:layout_alignStart="@+id/age_value"
        android:layout_marginTop="7dp"
        android:hint="Phone"
        android:layout_alignRight="@+id/password_confirm_value"
        android:layout_alignEnd="@+id/password_confirm_value" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/zipCode_value"
        android:layout_below="@+id/phone_value"
        android:layout_alignLeft="@+id/phone_value"
        android:layout_alignStart="@+id/phone_value"
        android:hint="ZIP Code"
        android:layout_alignRight="@+id/phone_value"
        android:layout_alignEnd="@+id/phone_value"
        android:layout_marginTop="7dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/location_value"
        android:layout_below="@+id/zipCode_value"
        android:layout_alignLeft="@+id/zipCode_value"
        android:layout_alignStart="@+id/zipCode_value"
        android:layout_alignRight="@+id/zipCode_value"
        android:layout_alignEnd="@+id/zipCode_value"
        android:layout_marginTop="7dp"
        android:hint="Location - Using GPS" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock My Location"
        android:id="@+id/location_button"
        android:layout_below="@+id/location_value"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Register"
        android:id="@+id/register_submit_button"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/location_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:id="@+id/gender_value_toggleButton"
        android:layout_above="@+id/phone_value"
        android:layout_alignRight="@+id/phone_value"
        android:layout_alignEnd="@+id/phone_value"
        android:layout_toRightOf="@+id/age_value"
        android:layout_toEndOf="@+id/age_value"
        android:layout_marginLeft="10dp"
        android:textOff="Male"
        android:textOn="Female" />

</RelativeLayout>

</ScrollView>

</RelativeLayout>
